.type-meta
  margin-top 10px
  >.type-meta-name
    font-size: 14px
    color: #7f8c8d;
    text-align right
  >.type-meta-value
    margin: 0.5rem 0 0.9rem;
    text-align right
.type-metas
  &>:last-child
    >.type-meta-value
      margin-bottom 0

.type-signature
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace;
  font-size: 0.85rem
  padding: 0.8rem 0.6rem
  border-left 5px solid #eaecef

.content-loading
  margin 1rem 0